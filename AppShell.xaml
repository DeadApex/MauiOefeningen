<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiOefeningen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiOefeningen.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiOefeningen">

    <ShellContent
        Title="Welkom"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title="Naam tonen"
        ContentTemplate="{DataTemplate views:NaamTonenPage}"
        Route="NaamTonenPage" />
    <ShellContent 
        Title="Vak"
        ContentTemplate="{DataTemplate views:VakPage}"
        Route="VakPage" />
    <ShellContent 
        Title="Afbeeldingen"
        ContentTemplate="{DataTemplate views:AfbeeldingenPage}"
        Route="AfbeeldingenPage" />
    <ShellContent 
        Title="Vragenlijst"
        ContentTemplate="{DataTemplate views:VragenlijstPage}"
        Route="VragenlijstPage" />
    <ShellContent 
        Title="Alle negen"
        ContentTemplate="{DataTemplate views:AlleNegenPage}"
        Route="AlleNegenPage" />
    <ShellContent 
        Title="GetallenRij"
        ContentTemplate="{DataTemplate views:GetallenRijPage}"
        Route="GetallenRijPage" />
</Shell>
